# Production environment variables for Render deployment
# DATABASE_URL will be automatically set by Render's PostgreSQL addon
# Example: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/feeds_db

# Generate a secure random key for production
SECRET_KEY=your_super_secret_key_here_change_in_production

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Upload settings
UPLOAD_DIRECTORY=uploads
MAX_UPLOAD_SIZE=10485760

# Email settings (optional - configure in Render environment variables)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password